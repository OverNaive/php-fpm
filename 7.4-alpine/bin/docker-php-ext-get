#!/usr/bin/env sh
set -e

dir=/usr/src/php
uri=https://pecl.php.net/get/

if [ ! -f "$dir/.docker-extracted" ]; then
    echo >&2 "error: PHP source required, run 'docker-php-source extract' first"
    exit 1
fi

dir="$dir/ext"

usage() {
    echo "usage: $0 module-name ï½œ module-name module-version"
    echo "   ie: $0 swoole | swoole 4.5.5"
}

name=$1
version=$2

if [ -z "$name" ]; then
    usage >&2
    exit 1
fi

if [ -z "$version" ]; then
    file=$name;
else
    file=$name-$version.tgz
fi

mkdir -p "$dir/$name"
curl -fsSL "$uri$file" | tar xvz -C "$dir/$name" --strip 1